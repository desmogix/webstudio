<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <display-name>WSEDS 1.0 alpha</display-name>
    
    <!-- location of log4j config file -->
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>
    <!-- applies log4j configuration -->
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    
    <!-- Spring servelet -->
    <servlet>
        <servlet-name>wseds</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>     
    </servlet>
    <!-- Catch everything is coming from / (widest scope possible) -->
    <servlet-mapping>
        <servlet-name>wseds</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    
    <!-- listener location -->
    <context-param>        
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/wseds-servlet.xml</param-value>
    </context-param> 
    
    
    
    <!-- Spring Security    -->
    <filter>
	<filter-name>springSecurityFilterChain</filter-name>
	<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
 
    <filter-mapping>
	<filter-name>springSecurityFilterChain</filter-name>
	<url-pattern>/*</url-pattern>
    </filter-mapping>
    
    
 
    
    
 
    <!-- luigiS: Misc settings -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
